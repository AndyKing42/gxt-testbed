<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <g:VerticalPanel>
    <g:Label>Login Name</g:Label>
    <g:TextBox ui:field='loginNameTextBox'></g:TextBox>
    <g:Label>Password</g:Label>
    <g:PasswordTextBox ui:field='passwordTextBox'></g:PasswordTextBox>
    <g:Button ui:field='okButton'>OK</g:Button>
    <g:Label ui:field='errorMessageLabel'/>
  </g:VerticalPanel>
</ui:UiBinder>